server {
    server_name wasabi.hellonico.info;

    # specific logs for wasabi
    access_log /var/log/nginx/wasabi.access.log;
    error_log /var/log/nginx/wasabi.error.log;

    location / {
        proxy_pass http://127.0.0.1:8095;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket support (if needed)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # SSL Configuration will be added by Certbot automatically
    # Or you can copy lines from your repository config if you have a wildcard cert:
    # ssl_certificate /etc/letsencrypt/live/repository.hellonico.info/fullchain.pem; # (Example)
    # ssl_certificate_key /etc/letsencrypt/live/repository.hellonico.info/privkey.pem; # (Example)
}
